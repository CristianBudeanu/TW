
@{
     ViewBag.Title = "Event";
     Layout = "~/Views/_LayoutPage1.cshtml";
}
<section id="breadcrumbs" class="breadcrumbs">
     <div class="container">

          <div class="d-flex justify-content-between align-items-center">
               <h2>Event</h2>
               <ol>
                    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li>Event</li>
               </ol>
          </div>

     </div>
</section>

<section>
     <section id="about" class="about">
          <div class="container" data-aos="fade-up">

               <div class="row">
                    <div class="col-lg-6 order-1 order-lg-2" data-aos="fade-left" data-aos-delay="100">
                         <img src="~/assets/img/event/event_page.jpeg" class="img-fluid" style="margin-top: 100px; margin-left: 40px; box-shadow: 15px 15px 10px #BBF; border-radius: 25px; border: 8px solid #ffc93c; " alt="">
                    </div>
                    <div class="col-lg-6 pt-4 pt-lg-0 order-2 order-lg-1 content" data-aos="fade-right" data-aos-delay="100">
                         <h3>Healthy Living Event </h3>
                         <p class="fst-italic">
                              Join us for a day of learning and inspiration to live a healthier life. Our expert speakers will share their insights and practical tips on healthy living, covering
                              topics such as nutrition, fitness, mental health, and more. The event will be held on [insert date] at [insert location].
                         </p>
                         <h3 style="margin-top: 90px">Speakers  </h3>

                         <ul>
                              <li><i class="ri-check-double-line"></i> Dr. John Smith - Nutritionist </li>
                              <li><i class="ri-check-double-line"></i> Jane Doe - Fitness Trainer</li>
                              <li><i class="ri-check-double-line"></i> Dr. Sarah Lee - Psychologist</li>
                         </ul>
                    </div>
               </div>

          </div>
     </section>
     <section>
          <div class="container" data-aos="fade-up">
               <h2 style="text-align: center">Schedule</h2>
               <table class="table">
                    <tr>
                         <th>Time</th>
                         <th>Activity</th>
                    </tr>
                    <tr>
                         <td>9:00 am - 9:30 am</td>
                         <td>Registration</td>
                    </tr>
                    <tr>
                         <td>9:30 am - 10:30 am</td>
                         <td>Keynote speech by Dr. John Smith</td>
                    </tr>
                    <tr>
                         <td>10:30 am - 11:30 am</td>
                         <td>Workshop by Jane Doe</td>
                    </tr>
                    <tr>
                         <td>11:30 am - 12:30 pm</td>
                         <td>Lunch break</td>
                    </tr>
                    <tr>
                         <td>12:30 pm - 1:30 pm</td>
                         <td>Panel discussion with all speakers</td>
                    </tr>
                    <tr>
                         <td>1:30 pm - 2:30 pm</td>
                         <td>Closing remarks by Dr. Sarah Lee</td>
                    </tr>
               </table>
          </div>
     </section>

     <section id="register" style="background-color: #ffc93c">
          <div class="container" data-aos="fade-up" style="text-align: center">
               <h2>Register</h2>
               <p>To register for the event, please fill out the form below:</p>
               <form>
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="name" required><br>

                    <label style="margin-top: 10px" for="email">Email:</label>
                    <input type="email" id="email" name="email" required><br>

                    <label style="margin-top: 10px" for="phone">Phone:</label>
                    <input type="tel" id="phone" name="phone"><br>

                    <label style="margin-top: 10px" for="attendees">Number of Attendees:</label>
                    <input type="number" id="attendees" name="attendees" min="1" max="10" required><br>

                    <input type="submit" value="Register">
               </form>
          </div>
     </section>

</section>